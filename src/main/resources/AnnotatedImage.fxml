<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="annotatedImage" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.belopopsky.photoBrowser.AnnotatedImageController">
  <children>
    <ScrollPane fx:id="canvasPane" prefHeight="400.0" prefWidth="600.0">
      <content>
        <Canvas fx:id="annotatedImageCanvas" height="398.0" onMouseClicked="#mouseCanvasClickHandler" onMouseDragged="#doFreeDraw" onMousePressed="#startFreeDraw" onMouseReleased="#endFreeDraw" />
      </content>
    </ScrollPane>
    <ScrollPane fx:id="imagePane" prefHeight="400.0" prefWidth="600.0">
      <content>
        <ImageView fx:id="annotatedImageHolder" fitHeight="1080.0" fitWidth="1920.0" onMouseClicked="#mouseImageClickHandler" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@bat.jpg" />
          </image>
	</ImageView>
      </content>
    </ScrollPane>
  </children>
</StackPane>
